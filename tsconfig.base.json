{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "lib": ["dom", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "target": "ESNext",
    "incremental": true,

    // setup
    "rootDir": ".",
    "outDir": "dist",

    // setting up declaration
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "emitDeclarationOnly": true
    // todo in the future
    // strict: true
    // isolatedDeclatarionts/modules true
  },
  "exclude": ["node_modules", ".vscode-test", "dist"]
}
