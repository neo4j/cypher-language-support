{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"],
      "outputMode": "new-only"
    },
    "build:intellij": {
      "dependsOn": ["build"],
      "outputs": ["packages/intellij-extension/build/**"]
    },
    "run:intellij": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build:intellij"]
    },
    "@neo4j-cypher/language-support#build": {
      "outputs": ["src/generated-parser/**", "dist/**"],
      "dependsOn": ["antlr4-c3#build"]
    },
    "@neo4j-cypher/language-server#build": {
      "dependsOn": [
        "@neo4j-cypher/language-support#build",
        "@neo4j-cypher/schema-poller#build"
      ],
      "outputs": ["dist/**"]
    },
    "clean": {
      "cache": false
    },
    "test": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    },
    "test:e2e": {
      "cache": false,
      "persistent": false,
      "dependsOn": ["build"]
    },
    "@neo4j-cypher/react-codemirror-playground#dev": {
      "outputs": [],
      "dependsOn": ["^build"],
      "persistent": true
    },
    "neo4j-for-vscode#build:dev": {
      "outputs": [],
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "benchmark": {
      "cache": false
    }
  }
}
