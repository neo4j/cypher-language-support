{
  "name": "neo4j-cypher-language-support",
  "description": "Neo4j's Cypher Language Support",
  "license": "Apache",
  "version": "1.0.0",
  "categories": [],
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neo4j/cypher-language-support.git"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "pnpm --recursive build",
    "build-vscode": "pnpm --filter='neo4j-for-vscode...' build",
    "dev-codemirror": "pnpm --recursive --parallel --filter='@neo4j-cypher/react-codemirror-playground...' dev",
    "release": "pnpm build && pnpm publish -r --tag next",
    "snapshot-release": "pnpm changeset pre exit && pnpm changeset version --snapshot canary && pnpm install --frozen-lockfile=false && pnpm build && pnpm publish -r --tag canary --no-git-checks",
    "deep-clean": "rimraf -g **/{node_modules,dist}",
    "clean": "pnpm --recursive --parallel clean",
    "test": "pnpm --recursive --parallel test",
    "test:e2e": "pnpm --recursive test:e2e",
    "test:formattingIntegrity": "ts-node ./packages/language-support/src/tests/formatting/verification/verificationCheck.ts",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --fix --ext .ts",
    "format": "prettier --config .prettierrc.json '**/*.ts' --write",
    "benchmark": "pnpm --recursive benchmark --concurrency=1"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=18.18.2",
    "vscode": "^1.22.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.2",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.5.0",
    "prettier": "^2.8.1",
    "prettier-plugin-organize-imports": "^3.2.1",
    "rimraf": "^6.0.1",
    "semver": "^7.6.1",
    "ts-node": "10.9.1",
    "typescript": "5.8.3",
    "vitest": "^2.1.9"
  },
  "packageManager": "pnpm@10.7.1+sha512.2d92c86b7928dc8284f53494fb4201f983da65f0fb4f0d40baafa5cf628fa31dae3e5968f12466f17df7e97310e30f343a648baea1b9b350685dafafffdf5808"
}
