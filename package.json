{
  "name": "cypher-lsp",
  "description": "Cypher LSP",
  "license": "Apache",
  "version": "1.0.0",
  "categories": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neo4j/cypher-lsp.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "gen-parser": "cd server && npm run gen-parser && cd ..",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "watch": "turbo run watch",
    "test": "turbo run test",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --fix --ext .ts",
    "format": "prettier --config .prettierrc.json '**/*.ts' --write"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.1",
    "prettier-plugin-organize-imports": "^3.2.1",
    "typescript": "^4.8.4",
    "turbo": "^1.8.8"
  }
}
