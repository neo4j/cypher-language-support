{
  "name": "cypher-lsp",
  "description": "Cypher LSP",
  "license": "Apache",
  "version": "1.0.0",
  "categories": [],
  "engines": {
    "vscode": "^1.43.0"
  },
  "activationEvents": [
    "onLanguage:cypher"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "cypher",
        "extensions": [
          ".cypher"
        ],
        "aliases": [
          "Cypher"
        ],
        "configuration": "./cypher-language-configuration.json"
      }
    ],
    "configuration": {
      "title": "Cypher LSP",
      "properties": {
        "cypherLSP.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        },
        "cypherLSP.neo4j.connect": {
          "order": 1,
          "type": "boolean",
          "default": true,
          "description": "Shall connect to Neo4j to gather data about labels and types."
        },
        "cypherLSP.neo4j.URL": {
          "order": 2,
          "type": "string",
          "default": "bolt://localhost:7687",
          "description": "Url of the database to connect."
        },
        "cypherLSP.neo4j.user": {
          "order": 3,
          "type": "string",
          "default": "neo4j",
          "description": "Username of the database to connect."
        },
        "cypherLSP.neo4j.password": {
          "order": 4,
          "type": "string",
          "default": "password",
          "description": "Password of the database to connect."
        }
      }
    },
    "configurationDefaults": {
      "[cypher]": {
        "editor.semanticHighlighting.enabled": true
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neo4j/cypher-lsp.git"
  },
  "scripts": {
    "prepare": "husky install",
    "vscode:prepublish": "npm run compile",
    "gen-parser": "cd server && npm run gen-parser && cd ..",
    "compile": "npm run gen-parser && tsc -b",
    "clean": "rm -r ./client/out||true && rm -r ./server/out||true",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "jest --silent=true",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --fix --ext .ts",
    "format": "prettier --config .prettierrc.json '**/*.ts' --write",
    "build-extension-dev": "vsce package --baseContentUrl https://none --baseImagesUrl https://none"
  },
  "devDependencies": {
    "@types/jest": "^29.2.6",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@vscode/vsce": "^2.18.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.0",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.1",
    "prettier-plugin-organize-imports": "^3.2.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.8.4"
  }
}
